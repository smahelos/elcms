<!DOCTYPE html>
<html>
<head>
    {include 'htmlHead.latte'}
</head>
<body class="hold-transition login-page">

    {snippet flashes}
        <div class="flashes card slide">
            <div class="container">
                <div n:foreach="$flashes as $flash" n:class="alert, flash, $flash->type">{$flash->message}</div>
            </div>
        </div>
    {/snippet}

    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">{_ ui.login_to_admin}</p>

            {include content}

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    {block scripts}

        {control js}

        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>
    {/block}
</body>
</html>
